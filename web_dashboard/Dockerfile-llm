FROM python:3.11-slim

WORKDIR /app

COPY requirements-llm.txt .
RUN pip install --no-cache-dir -r requirements-llm.txt

COPY llm_app.py .

# Environment variables will be set via Azure Container Apps
ENV PORT=8080
EXPOSE 8080

CMD ["python", "-m", "uvicorn", "llm_app:app", "--host", "0.0.0.0", "--port", "8080"]
